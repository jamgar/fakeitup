<div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-lg">

    <p style="color: green"><%= notice %></p>
    <p style="color: red"><%= alert %></p>

    <p class="text-center text-lg font-medium">Sign in to your account</p>

    <%= form_with(url: sign_in_path, class: "mb-0 mt-6 space-y-4 rounded-lg p-4 shadow-lg sm:p-6 lg:p-8") do |form| %>
      <div>
        <%= form.label :email, class: "sr-only" %>
        <div class="relative">
          <%= form.email_field :email,
            value: params[:email_hint],
            required: true,
            autofocus: true,
            autocomplete: "email",
            class: "w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm",
            placeholder: "Enter email"  %>
        </div>                                                                                                             
      </div>

      <div>
        <%= form.label :password, class: "sr-only" %>
        <div class="relative">
          <%= form.password_field :password,
            required: true,
            autocomplete: "current-password",
            class: "w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm",
            placeholder: "Enter password" %>
        </div>
      </div>

      <div>
        <%= form.submit "Sign in",
        class: "block w-full rounded-lg bg-indigo-600 px-5 py-3 text-sm font-medium text-white"%>
      </div>
    <% end %>

    <br>

    <br>

    <div class="text-center text-sm text-gray-500">
      <%= link_to "Sign up", sign_up_path, class: "underline" %> |
      <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "underline" %>
    </div>
  </div>
</div>
